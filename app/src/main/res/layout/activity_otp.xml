<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <TextView
        android:id="@+id/tvTwoHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/login"
        android:textColor="@color/lightBlack"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOtpText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:textColor="@color/lightBlack"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTwoHeader" />

    <TextView
        android:id="@+id/tvOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/otp"
        android:textColor="@color/lightBlack"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOtpText"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etOtp1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_text_background_dr"/>


    <EditText
        android:id="@+id/etOtp2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLength="1"
        android:layout_marginStart="10dp"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp"
        app:layout_constraintStart_toEndOf="@id/etOtp1"
        android:background="@drawable/edit_text_background_dr"/>


    <EditText
        android:id="@+id/etOtp3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:maxLength="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp"
        app:layout_constraintStart_toEndOf="@id/etOtp2"
        android:background="@drawable/edit_text_background_dr"/>


    <EditText
        android:id="@+id/etOtp4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp"
        app:layout_constraintStart_toEndOf="@id/etOtp3"
        android:background="@drawable/edit_text_background_dr"/>


    <EditText
        android:id="@+id/etOtp5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLength="1"
        android:inputType="numberPassword"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp"
        app:layout_constraintStart_toEndOf="@id/etOtp4"
        android:background="@drawable/edit_text_background_dr"/>


    <EditText
        android:id="@+id/etOtp6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:maxLength="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvOtp"
        app:layout_constraintStart_toEndOf="@id/etOtp5"
        android:background="@drawable/edit_text_background_dr"/>


    <TextView
        android:id="@+id/btnThreeGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>